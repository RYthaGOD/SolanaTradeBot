# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_FALLBACK_1=https://solana-api.projectserum.com
SOLANA_RPC_FALLBACK_2=https://rpc.ankr.com/solana
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta  # Options: mainnet-beta, devnet, testnet, localnet

# Wallet Configuration (NEVER commit real private keys!)
# Use hardware wallet or secure key management service in production
WALLET_ENCRYPTED_KEY_PATH=./wallet/encrypted_key.json
WALLET_ENCRYPTION_PASSWORD=your_secure_password_here

# Trading Configuration
INITIAL_CAPITAL=10000.0
MAX_POSITION_SIZE_PERCENT=10.0
MAX_DRAWDOWN_PERCENT=10.0
CONFIDENCE_THRESHOLD=0.5
ENABLE_TRADING=false  # Set to true only when ready for live trading

# Risk Management
ENABLE_RISK_MANAGEMENT=true
MAX_DAILY_TRADES=50
MAX_DAILY_LOSS=500.0
STOP_LOSS_PERCENT=5.0
TAKE_PROFIT_PERCENT=10.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_RATE_LIMIT_PER_MINUTE=60
ENABLE_API_AUTH=true
API_SECRET_KEY=change_this_to_random_secure_key

# Monitoring & Logging
LOG_LEVEL=info  # Options: trace, debug, info, warn, error
ENABLE_METRICS=true
METRICS_PORT=9090
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Database (for future use)
DATABASE_URL=postgresql://localhost/agentburn_trading
ENABLE_DATABASE=false

# DEX Configuration
JUPITER_API_URL=https://quote-api.jup.ag/v6
ENABLE_DEX_TRADING=false

# Price Oracle Configuration
PYTH_PROGRAM_ID=FsJ3A3u2vn5cTVofAjvy6y5kwABJAqYWpe4975bi2epH
ENABLE_PYTH_ORACLE=false

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=false

# Security
ENABLE_2FA=false
REQUIRE_TRANSACTION_CONFIRMATION=true
MAX_TRANSACTION_RETRIES=3
TRANSACTION_TIMEOUT_SECONDS=60
