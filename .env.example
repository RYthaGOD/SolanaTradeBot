# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Wallet Configuration
# If not provided, a new wallet will be automatically generated
# To use your own wallet, uncomment and set your base58 private key:
# WALLET_PRIVATE_KEY=your_base58_private_key_here
#
# To get your wallet's private key from Solana CLI:
# solana-keygen display ~/.config/solana/id.json
#
# Treasury PDA is automatically derived from the wallet address
# No manual configuration needed

# DeepSeek AI Configuration (Free tier: 5M tokens/month)
# Get your API key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=

# Trading Parameters
MAX_POSITION_SIZE_PERCENT=10
MAX_DRAWDOWN_PERCENT=10
CONFIDENCE_THRESHOLD=0.5

# Trading Budget Configuration
# Set the initial trading budget (in USD equivalent)
# If not set, defaults to 10000.0
# Can be updated via API endpoints
TRADING_BUDGET=10000.0

# Autonomous Agent Configuration
AGENT_MIN_CONFIDENCE=0.6
AGENT_CHECK_INTERVAL_SECS=60

# Data Feed Configuration
# Switchboard Oracle - Live price feeds (Solana mainnet)
# DEX Screener - Token discovery and analysis
# PumpFun - Meme coin launches and sentiment

# API Configuration
API_PORT=8080
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Logging
RUST_LOG=info
